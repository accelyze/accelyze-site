---
import BaseLayout from "@layout/BaseLayout.astro";
import type { WithContext, Thing } from "schema-dts";
import { withBase } from "@utils/paths";

const hero = {
  title: "Approach for Regulated Industries",
  subtitle:
    "Healthcare, finance, and public sector clients need AI systems that respect regulation, privacy, and critical-safety expectations. Here’s how we deliver safely without losing speed.",
};

const pillars = [
  {
    title: "Stakeholder alignment",
    description:
      "We bring risk, compliance, legal, and business owners into the conversation during week one. Together we define the questions they need answered before launch, and we build artifacts that address those questions directly.",
  },
  {
    title: "Data governance & guardrails",
    description:
      "Every design addresses data residency, retention, redaction, and access. We constrain retrieval to approved sources, enforce per-user entitlements, and ensure logs are auditable within your existing tooling.",
  },
  {
    title: "Evaluation & incident response",
    description:
      "Evaluation frameworks map to your risk appetite. We implement offline tests, online monitoring, human review steps, and incident playbooks with named owners so regulators see a complete story.",
  },
];

const complianceArtifacts = [
  "Use-case risk assessment tied to regulation (HIPAA, OCC, GDPR, etc.)",
  "Evaluation harness with test sets covering safety, bias, and privacy scenarios",
  "Audit-ready documentation for prompts, retrieval sources, and release approvals",
  "Incident response plan that defines severity levels, on-call, and communication paths",
];

const cta = {
  text: "Discuss your regulatory requirements",
  link: "/contact",
};

const seo = {
  title: "Regulated Industries Approach | Accelyze",
  description:
    "Learn how Accelyze partners with healthcare, finance, and public sector teams to launch AI systems safely.",
};

const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  inLanguage: "en-US",
  "@id": Astro.url.href,
  url: Astro.url.href,
  name: "Regulated Industries Approach",
  description: seo.description,
  isPartOf: {
    "@type": "WebSite",
    url: `${Astro.site}`,
    name: "Accelyze",
    description:
      "Accelyze helps enterprises design, build, and operate AI systems that make it into production.",
  },
};
---

<BaseLayout seo={seo} schema={schema}>
  <section class="mx-auto max-w-[85rem] px-4 pb-12 pt-48 sm:px-6 lg:px-8">
    <div class="max-w-4xl">
      <p class="text-sm font-semibold uppercase tracking-[0.3em] text-indigo-600 dark:text-indigo-400">
        Approach
      </p>
      <h1 class="mt-4 text-balance text-4xl text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl dark:text-white">
        {hero.title}
      </h1>
      <p class="mt-6 text-lg text-slate-600 dark:text-slate-300">
        {hero.subtitle}
      </p>
    </div>
  </section>

  <section class="mx-auto max-w-[85rem] px-4 pb-16 sm:px-6 lg:px-8">
    <div class="grid gap-6 md:grid-cols-3">
      {pillars.map((pillar) => (
        <article class="rounded-3xl border border-slate-200 bg-white/90 p-6 shadow-lg shadow-indigo-200/40 dark:border-slate-800 dark:bg-slate-900/80">
          <h2 class="text-xl font-semibold text-slate-900 dark:text-white">{pillar.title}</h2>
          <p class="mt-3 text-sm text-slate-600 dark:text-slate-300">
            {pillar.description}
          </p>
        </article>
      ))}
    </div>
  </section>

  <section class="mx-auto max-w-[85rem] px-4 pb-24 sm:px-6 lg:px-8">
    <div class="rounded-3xl border border-slate-200 bg-white/90 p-8 shadow-2xl shadow-indigo-200/40 dark:border-slate-800 dark:bg-slate-900/80">
      <h2 class="text-2xl font-semibold text-slate-900 dark:text-white">
        Compliance-ready deliverables
      </h2>
      <p class="mt-3 text-base text-slate-600 dark:text-slate-300">
        We tie each engagement to the artifacts your regulators and internal governance teams care about.
      </p>
      <ul class="mt-6 list-disc space-y-2 pl-5 text-base text-slate-600 dark:text-slate-300 marker:text-indigo-500">
        {complianceArtifacts.map((artifact) => (
          <li>{artifact}</li>
        ))}
      </ul>
    </div>
  </section>

  <section class="mx-auto max-w-4xl px-4 pb-24 text-center sm:px-6 lg:px-8">
    <div class="rounded-3xl border border-slate-200 bg-white/90 p-10 shadow-2xl shadow-indigo-200/40 dark:border-slate-800 dark:bg-slate-900/80">
      <h2 class="text-3xl font-semibold text-slate-900 dark:text-white">
        Need an AI plan your risk team will endorse?
      </h2>
      <p class="mt-4 text-base text-slate-600 dark:text-slate-300">
        We’ll map your regulatory requirements to concrete guardrails, evaluation strategies, and governance workflows.
      </p>
      <a
        href={withBase(cta.link)}
        class="mt-8 inline-flex items-center justify-center rounded-xl bg-indigo-600 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-600/30 transition hover:bg-indigo-500 dark:bg-indigo-500 dark:hover:bg-indigo-400"
      >
        {cta.text}
      </a>
    </div>
  </section>
</BaseLayout>
