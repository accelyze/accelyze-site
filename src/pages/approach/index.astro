---
import BaseLayout from "@layout/BaseLayout.astro";
import { withBase } from "@utils/paths";
import type { WithContext, Thing } from "schema-dts";

const hero = {
  title: "Our approach to shipping AI",
  subtitle:
    "Accelyze was built by leaders who have taken AI from prototypes to systems used by millions. Our method focuses on the messy middle—alignment, architecture, integration, and operations.",
};

const method = [
  {
    title: "Discover",
    description:
      "Frame the business problem, agree on a measurable outcome, map stakeholders, and inventory the data and constraints that matter. We leave this phase with a shared brief and quantitative definition of success.",
  },
  {
    title: "Design",
    description:
      "Translate the brief into an end-to-end architecture, covering retrieval, reasoning, evaluation, guardrails, and integrations. We run discovery sessions with risk, security, and platform teams to ensure zero surprises later.",
  },
  {
    title: "Deliver",
    description:
      "Ship working software on your infrastructure, integrate with your systems of record, and harden the solution with monitoring, evaluation, and incident playbooks. Every sprint produces tangible artifacts—not just slides.",
  },
  {
    title: "Operate",
    description:
      "Support launches, run readiness drills, and transfer ownership to client teams. We enforce ongoing evaluation, track business KPIs, and provide clear paths for iteration once the system is live.",
  },
];

const highlights = [
  {
    title: "Regulated industries",
    description:
      "Healthcare, finance, and public sector teams rely on us for guardrails that meet compliance requirements while still delivering value.",
    link: "/approach/regulated-industries",
  },
  {
    title: "Platform enablement",
    description:
      "We build shared services, templates, and evaluation tooling so every new AI project doesn’t start from zero.",
    link: "/approach/platform-and-mlops",
  },
  {
    title: "Delivery playbook",
    description:
      "See how our four-step methodology spans from use-case discovery through production runbooks.",
    link: "/approach/methodology",
  },
];

const cta = {
  text: "Talk to us about your next initiative",
  link: "/contact",
};

const seo = {
  title: "Our Approach | Accelyze",
  description:
    "Learn how Accelyze takes AI from prototype to production through a proven method across industries.",
};

const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  inLanguage: "en-US",
  "@id": Astro.url.href,
  url: Astro.url.href,
  name: "Accelyze Approach",
  description: seo.description,
  isPartOf: {
    "@type": "WebSite",
    url: `${Astro.site}`,
    name: "Accelyze",
    description:
      "Accelyze helps enterprises design, build, and operate AI systems that make it into production.",
  },
};
---

<BaseLayout seo={seo} schema={schema}>
  <section class="mx-auto max-w-[85rem] px-4 pb-12 pt-48 sm:px-6 lg:px-8">
    <div class="max-w-4xl">
      <p class="text-sm font-semibold uppercase tracking-[0.3em] text-indigo-600 dark:text-indigo-400">
        Approach
      </p>
      <h1 class="mt-4 text-balance text-4xl text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl dark:text-white">
        {hero.title}
      </h1>
      <p class="mt-6 text-lg text-slate-600 dark:text-slate-300">
        {hero.subtitle}
      </p>
    </div>
  </section>

  <section class="mx-auto max-w-[85rem] px-4 pb-16 sm:px-6 lg:px-8">
    <div class="grid gap-6 md:grid-cols-2">
      {method.map((step, index) => (
        <article class="rounded-3xl border border-slate-200 bg-white/90 p-6 shadow-lg shadow-indigo-200/40 dark:border-slate-800 dark:bg-slate-900/80">
          <p class="text-xs font-semibold uppercase tracking-wide text-indigo-600 dark:text-indigo-400">
            Step {index + 1}
          </p>
          <h2 class="mt-2 text-xl font-semibold text-slate-900 dark:text-white">
            {step.title}
          </h2>
          <p class="mt-3 text-sm text-slate-600 dark:text-slate-300">
            {step.description}
          </p>
        </article>
      ))}
    </div>
  </section>

  <section class="mx-auto max-w-[85rem] px-4 pb-16 sm:px-6 lg:px-8">
    <div class="rounded-3xl border border-slate-200 bg-white/90 p-8 shadow-2xl shadow-indigo-200/40 dark:border-slate-800 dark:bg-slate-900/80">
      <div class="grid gap-6 md:grid-cols-3">
        {highlights.map((item) => (
          <div class="flex flex-col gap-3">
            <p class="text-xs font-semibold uppercase tracking-wide text-indigo-600 dark:text-indigo-400">
              Deep dive
            </p>
            <h3 class="text-lg font-semibold text-slate-900 dark:text-white">{item.title}</h3>
            <p class="text-sm text-slate-600 dark:text-slate-300">{item.description}</p>
            <a
              href={withBase(item.link)}
              class="text-sm font-semibold text-indigo-600 transition hover:text-indigo-400 dark:text-indigo-400"
            >
              Explore →
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-4xl px-4 pb-24 text-center sm:px-6 lg:px-8">
    <div class="rounded-3xl border border-slate-200 bg-white/90 p-10 shadow-2xl shadow-indigo-200/40 dark:border-slate-800 dark:bg-slate-900/80">
      <h2 class="text-3xl font-semibold text-slate-900 dark:text-white">
        Need a partner focused on production outcomes?
      </h2>
      <p class="mt-4 text-base text-slate-600 dark:text-slate-300">
        Tell us about your use case, stakeholders, and success metrics. We’ll confirm feasibility, risks, and a path to launch.
      </p>
      <a
        href={withBase(cta.link)}
        class="mt-8 inline-flex items-center justify-center rounded-xl bg-indigo-600 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-600/30 transition hover:bg-indigo-500 dark:bg-indigo-500 dark:hover:bg-indigo-400"
      >
        {cta.text}
      </a>
    </div>
  </section>
</BaseLayout>
