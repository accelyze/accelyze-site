---
import BaseLayout from "@layout/BaseLayout.astro";
import type { WithContext, Thing } from "schema-dts";
import { withBase } from "@utils/paths";

const hero = {
  title: "Our Delivery Method",
  subtitle:
    "A four-step approach that keeps AI initiatives honest, from use-case discovery through runbooks and operations.",
};

const phases = [
  {
    name: "Discover",
    artifacts: [
      "Problem brief with business metric, scope, and constraints",
      "Stakeholder alignment map across business, IT, and risk",
      "Data and system inventory with ownership and readiness scoring",
    ],
  },
  {
    name: "Design",
    artifacts: [
      "End-to-end solution architecture, including retrieval, prompts, evaluation, and guardrails",
      "Risks and dependency register with mitigation plans",
      "Implementation plan with sprints, handoffs, and success criteria",
    ],
  },
  {
    name: "Deliver",
    artifacts: [
      "Working software on client infrastructure with integrations",
      "Monitoring, logging, and evaluation harnesses wired to dashboards",
      "Launch readiness review covering security, risk, and business sign-off",
    ],
  },
  {
    name: "Operate",
    artifacts: [
      "Runbooks, incident response plans, and on-call ownership",
      "Continuous evaluation metrics tied to business KPIs",
      "Capability transfer plan for client teams, including training sessions",
    ],
  },
];

const cta = {
  text: "Plan a delivery workshop",
  link: "/contact",
};

const seo = {
  title: "Accelyze Delivery Method | Approach",
  description:
    "Learn how Accelyze navigates Discover, Design, Deliver, and Operate phases to take AI projects into production.",
};

const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  inLanguage: "en-US",
  "@id": Astro.url.href,
  url: Astro.url.href,
  name: "Accelyze Delivery Method",
  description: seo.description,
  isPartOf: {
    "@type": "WebSite",
    url: `${Astro.site}`,
    name: "Accelyze",
    description: "Accelyze helps enterprises design, build, and operate AI systems that make it into production.",
  },
};
---

<BaseLayout seo={seo} schema={schema}>
  <section class="mx-auto max-w-[85rem] px-4 pb-12 pt-48 sm:px-6 lg:px-8">
    <div class="max-w-4xl">
      <p class="text-sm font-semibold uppercase tracking-[0.3em] text-indigo-600 dark:text-indigo-400">
        Approach
      </p>
      <h1 class="mt-4 text-balance text-4xl text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl dark:text-white">
        {hero.title}
      </h1>
      <p class="mt-6 text-lg text-slate-600 dark:text-slate-300">
        {hero.subtitle}
      </p>
    </div>
  </section>

  <section class="mx-auto max-w-[85rem] px-4 pb-24 sm:px-6 lg:px-8">
    <div class="space-y-8">
      {phases.map((phase, index) => (
        <article class="rounded-3xl border border-slate-200 bg-white/90 p-8 shadow-lg shadow-indigo-200/40 dark:border-slate-800 dark:bg-slate-900/80">
          <p class="text-xs font-semibold uppercase tracking-wide text-indigo-600 dark:text-indigo-400">
            Phase {index + 1}
          </p>
          <h2 class="mt-2 text-2xl font-semibold text-slate-900 dark:text-white">
            {phase.name}
          </h2>
          <p class="mt-4 text-sm font-semibold text-slate-800 dark:text-slate-100">
            Key artifacts
          </p>
          <ul class="mt-2 list-disc space-y-2 pl-5 text-base text-slate-600 dark:text-slate-300 marker:text-indigo-500">
            {phase.artifacts.map((artifact) => (
              <li>{artifact}</li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </section>

  <section class="mx-auto max-w-4xl px-4 pb-24 text-center sm:px-6 lg:px-8">
    <div class="rounded-3xl border border-slate-200 bg-white/90 p-10 shadow-2xl shadow-indigo-200/40 dark:border-slate-800 dark:bg-slate-900/80">
      <h2 class="text-3xl font-semibold text-slate-900 dark:text-white">
        Want to walk through a sample project?
      </h2>
      <p class="mt-4 text-base text-slate-600 dark:text-slate-300">
        We can run a workshop that maps your initiative onto this method, highlighting risks, owners, and artifacts required at each stage.
      </p>
      <a
        href={withBase(cta.link)}
        class="mt-8 inline-flex items-center justify-center rounded-xl bg-indigo-600 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-600/30 transition hover:bg-indigo-500 dark:bg-indigo-500 dark:hover:bg-indigo-400"
      >
        {cta.text}
      </a>
    </div>
  </section>
</BaseLayout>
