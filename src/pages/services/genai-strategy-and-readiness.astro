---
import BaseLayout from "@layout/BaseLayout.astro";
import type { WithContext, Thing } from "schema-dts";
import { withBase } from "@utils/paths";

const service = {
  title: "GenAI Strategy & Readiness",
  subtitle:
    "Clarify where GenAI can drive measurable value, assess readiness, and align leadership around a confident roadmap.",
  problem:
    "Many enterprises have pockets of experimentation but no clear path to a production roadmap. Teams chase demos while data, architecture, and ownership remain unresolved.",
  whatWeDo: [
    "Identify and prioritize the highest-value GenAI use cases across business units",
    "Assess data readiness, architecture, security, and MLOps maturity",
    "Define a 6–18 month roadmap that balances quick wins with foundational work",
  ],
  deliverables: [
    "Use case portfolio with value and feasibility scoring",
    "Target GenAI architecture spanning data, orchestration, retrieval, and governance",
    "Roadmap with recommended first-wave projects, owners, and investment levels",
  ],
  timeline: "Typical engagement: 4–6 weeks",
};

const cta = {
  text: "Schedule a discovery call",
  link: "/contact",
};

const seo = {
  title: "GenAI Strategy & Readiness | Accelyze",
  description:
    "Identify the right GenAI use cases, assess readiness, and build a production-focused roadmap with Accelyze.",
};

const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  inLanguage: "en-US",
  "@id": Astro.url.href,
  url: Astro.url.href,
  name: service.title,
  description: seo.description,
  isPartOf: {
    "@type": "WebSite",
    url: `${Astro.site}`,
    name: "Accelyze",
    description:
      "Accelyze helps enterprises design, build, and operate GenAI systems that make it into production.",
  },
};
---

<BaseLayout seo={seo} schema={schema}>
  <section class="mx-auto max-w-[85rem] px-4 pb-12 pt-48 sm:px-6 lg:px-8">
    <div class="max-w-4xl">
      <p class="text-sm font-semibold uppercase tracking-[0.3em] text-indigo-600 dark:text-indigo-400">
        Services
      </p>
      <h1 class="mt-4 text-balance text-4xl text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl dark:text-white">
        {service.title}
      </h1>
      <p class="mt-6 text-lg text-slate-600 dark:text-slate-300">
        {service.subtitle}
      </p>
    </div>
  </section>

  <section class="mx-auto max-w-[85rem] px-4 pb-16 sm:px-6 lg:px-8">
    <div class="grid gap-8 lg:grid-cols-2">
      <div class="rounded-3xl border border-slate-200 bg-white/90 p-8 shadow-lg dark:border-slate-800 dark:bg-slate-900/80">
        <h2 class="text-xl font-semibold text-slate-900 dark:text-white">The challenge</h2>
        <p class="mt-4 text-base text-slate-600 dark:text-slate-300">
          {service.problem}
        </p>
      </div>
      <div class="rounded-3xl border border-slate-200 bg-white/90 p-8 shadow-lg dark:border-slate-800 dark:bg-slate-900/80">
        <h2 class="text-xl font-semibold text-slate-900 dark:text-white">What we do</h2>
        <ul class="mt-4 list-disc space-y-2 pl-5 text-base text-slate-600 dark:text-slate-300 marker:text-indigo-500">
          {service.whatWeDo.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </div>
    </div>
    <div class="mt-8 rounded-3xl border border-slate-200 bg-white/90 p-8 shadow-lg dark:border-slate-800 dark:bg-slate-900/80">
      <h2 class="text-xl font-semibold text-slate-900 dark:text-white">Deliverables</h2>
      <ul class="mt-4 list-disc space-y-2 pl-5 text-base text-slate-600 dark:text-slate-300 marker:text-indigo-500">
        {service.deliverables.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
      <p class="mt-6 text-sm font-semibold uppercase tracking-wide text-indigo-600 dark:text-indigo-400">
        {service.timeline}
      </p>
    </div>
  </section>

  <section class="mx-auto max-w-4xl px-4 pb-24 text-center sm:px-6 lg:px-8">
    <div class="rounded-3xl border border-slate-200 bg-white/90 p-10 shadow-2xl shadow-indigo-200/40 dark:border-slate-800 dark:bg-slate-900/80">
      <h2 class="text-3xl font-semibold text-slate-900 dark:text-white">
        Ready to prioritize the GenAI work that will actually ship?
      </h2>
      <p class="mt-4 text-base text-slate-600 dark:text-slate-300">
        Share your current state and we’ll respond with a candid assessment plus a path to production.
      </p>
      <a
        href={withBase(cta.link)}
        class="mt-8 inline-flex items-center justify-center rounded-xl bg-indigo-600 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-600/30 transition hover:bg-indigo-500 dark:bg-indigo-500 dark:hover:bg-indigo-400"
      >
        {cta.text}
      </a>
    </div>
  </section>
</BaseLayout>
