---
import BaseLayout from "@layout/BaseLayout.astro";
import type { WithContext, Thing } from "schema-dts";
import { withBase } from "@utils/paths";
import { getCollection } from "astro:content";
import { formatDate } from "@utils/utils";
import HomeLatestInsights from "@sections/HomeLatestInsights.astro";

const hero = {
  title: "AI Services That Drive Business Results",
  subtitle:
    "We help you turn AI potential into measurable business outcomes. Every service is designed to solve real business problems and deliver tangible value to your bottom line.",
};

const services = [
  {
    title: "AI Strategy & Business Impact",
    slug: "/services/genai-strategy-and-readiness",
    description:
      "Identify AI opportunities that drive measurable business value and create a practical roadmap for rapid implementation.",
    problem:
      "Most companies waste time and money on AI projects that never deliver business results because they lack a clear strategy.",
    whatWeDo: [
      "Discover high-ROI AI use cases aligned with your business goals",
      "Build executive alignment and secure stakeholder buy-in",
      "Create an actionable roadmap that delivers quick wins and long-term value",
    ],
    deliverables: [
      "Business case for AI investment with clear ROI projections",
      "Prioritized portfolio of AI initiatives with impact estimates",
      "Implementation roadmap with timelines, resource needs, and success metrics",
    ],
    timeline: "Typical engagement: 4–6 weeks",
  },
  {
    title: "AI Implementation & Value Delivery",
    slug: "/services/pilot-to-production-delivery",
    description:
      "Transform AI concepts into production systems that deliver measurable business outcomes and user adoption.",
    problem:
      "Great AI prototypes often fail in production because they don't solve real problems or integrate with business workflows.",
    whatWeDo: [
      "Validate AI solutions with real users and business scenarios",
      "Build production-ready systems that integrate seamlessly with existing tools",
      "Drive adoption and measure business impact throughout implementation",
    ],
    deliverables: [
      "Production AI system deployed and integrated with your business processes",
      "User training materials and change management plans",
      "Performance dashboards showing business impact and ROI",
    ],
    timeline: "Typical engagement: 8-12 weeks",
  },
  {
    title: "Scalable AI Platform",
    slug: "/services/mlops-and-genai-platform-enablement",
    description:
      "Build a foundation that enables your entire organization to develop and deploy AI solutions efficiently and safely.",
    problem:
      "Without the right platform, every AI project becomes expensive, slow, and unreliable, killing innovation and ROI.",
    whatWeDo: [
      "Design AI infrastructure that scales with your business needs",
      "Create reusable components and best practices for rapid AI development",
      "Establish governance and monitoring that ensures reliability and trust",
    ],
    deliverables: [
      "Enterprise AI platform that reduces development time by 60-80%",
      "Library of reusable AI components and templates",
      "Automated testing, monitoring, and compliance workflows",
    ],
    timeline: "Typical engagement: 8-12 weeks",
  },
  {
    title: "AI Trust & Governance",
    slug: "/services/ai-risk-evaluation-and-governance",
    description:
      "Build confidence in your AI systems with proper governance, risk management, and compliance frameworks.",
    problem:
      "Leaders hesitate to deploy AI at scale due to concerns about reliability, fairness, security, and regulatory compliance.",
    whatWeDo: [
      "Design AI systems that are transparent, fair, and accountable",
      "Implement safeguards and monitoring to prevent AI failures",
      "Create governance frameworks that satisfy regulators and build stakeholder trust",
    ],
    deliverables: [
      "AI governance framework tailored to your industry and risk tolerance",
      "Automated monitoring and alerting for AI performance and fairness",
      "Compliance documentation and risk assessment procedures",
    ],
    timeline: "Typical engagement: 6–10 weeks",
  },
];

const cta = {
  title: "Need a AI partner that ships?",
  description:
    "Tell us about your use case, current stage, and success metrics. We’ll share an honest view on feasibility and a plan for getting to production.",
  button: {
    text: "Schedule a discovery call",
    link: "/contact",
  },
};

const seo = {
  title: "Accelyze Services",
  description:
    "AI strategy, delivery, platform enablement, and risk services built by leaders from Amazon and Google to get AI into production.",
};

const schema: WithContext<Thing> = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  inLanguage: "en-US",
  "@id": Astro.url.href,
  url: Astro.url.href,
  name: "Accelyze Services",
  description: seo.description,
  isPartOf: {
    "@type": "WebSite",
    url: `${Astro.site}`,
    name: "Accelyze",
    description:
      "Accelyze helps enterprises design, build, and operate AI systems that make it into production.",
  },
};
---

<BaseLayout seo={seo} schema={schema}>
  <section class="mx-auto max-w-[85rem] px-4 pt-48 pb-12 sm:px-6 lg:px-8">
    <div class="max-w-4xl">
      <h1
        class="text-4xl text-balance text-slate-800 sm:text-5xl md:text-6xl lg:text-7xl dark:text-white"
      >
        {hero.title}
      </h1>
      <p class="mt-6 text-lg text-slate-600 dark:text-slate-300">
        {hero.subtitle}
      </p>
    </div>
  </section>

  <section class="mx-auto max-w-[85rem] px-4 pb-20 sm:px-6 lg:px-8">
    <div class="space-y-6 text-base text-slate-600 dark:text-slate-300">
      <p class="text-pretty">
        We focus on what matters most: <strong
          >delivering measurable business results</strong
        > from AI investments. Our services are designed to solve the real challenges
        that prevent AI projects from creating value.
      </p>
      <p class="text-pretty">
        Whether you're just starting your AI journey or scaling existing
        initiatives, we help you avoid common pitfalls and ensure every AI
        project delivers tangible ROI for your business.
      </p>
    </div>

    <div class="mt-12 grid grid-cols-1 gap-8 lg:grid-cols-2">
      {
        services.map((service) => (
          <article class="flex h-full flex-col rounded-3xl border border-slate-200 bg-white/90 p-8 shadow-lg shadow-indigo-200/40 transition hover:-translate-y-1 dark:border-slate-800 dark:bg-slate-900/80">
            <div class="flex items-start justify-between gap-4">
              <div>
                <p class="text-sm font-semibold tracking-wide text-indigo-600 uppercase">
                  {service.timeline}
                </p>
                <h2 class="mt-2 text-2xl font-semibold text-slate-900 dark:text-white">
                  {service.title}
                </h2>
              </div>
              <a
                href={withBase(service.slug)}
                class="text-sm font-semibold text-indigo-600 transition hover:text-indigo-400 dark:text-indigo-400"
              >
                Learn more →
              </a>
            </div>
            <p class="mt-4 text-sm text-slate-600 dark:text-slate-300">
              {service.description}
            </p>
            <div class="mt-6 space-y-4 text-sm text-slate-600 dark:text-slate-300">
              <div>
                <p class="font-semibold text-slate-800 dark:text-slate-100">
                  Problem we solve
                </p>
                <p class="mt-1">{service.problem}</p>
              </div>
              <div>
                <p class="font-semibold text-slate-800 dark:text-slate-100">
                  What we do
                </p>
                <ul class="mt-2 list-disc space-y-1 pl-5 marker:text-indigo-500">
                  {service.whatWeDo.map((item) => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>
              <div>
                <p class="font-semibold text-slate-800 dark:text-slate-100">
                  Key deliverables
                </p>
                <ul class="mt-2 list-disc space-y-1 pl-5 marker:text-indigo-500">
                  {service.deliverables.map((item) => (
                    <li>{item}</li>
                  ))}
                </ul>
              </div>
            </div>
            <div class="mt-auto pt-6">
              <a
                href={withBase(service.slug)}
                class="inline-flex items-center text-sm font-semibold text-indigo-600 transition hover:text-indigo-400 dark:text-indigo-400"
              >
                Explore this service
                <svg
                  class="ms-1 size-4"
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M5 12h14" />
                  <path d="m12 5 7 7-7 7" />
                </svg>
              </a>
            </div>
          </article>
        ))
      }
    </div>
  </section>

  <HomeLatestInsights />

  <section class="mx-auto max-w-4xl px-4 pb-24 text-center sm:px-6 lg:px-8">
    <div
      class="rounded-3xl border border-slate-200 bg-white/90 p-10 shadow-2xl shadow-indigo-200/40 dark:border-slate-800 dark:bg-slate-900/80"
    >
      <h2 class="text-3xl font-semibold text-slate-900 dark:text-white">
        {cta.title}
      </h2>
      <p class="mt-4 text-base text-slate-600 dark:text-slate-300">
        {cta.description}
      </p>
      <a
        href={withBase(cta.button.link)}
        class="mt-8 inline-flex items-center justify-center rounded-xl bg-indigo-600 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-indigo-600/30 transition hover:bg-indigo-500 dark:bg-indigo-500 dark:hover:bg-indigo-400"
      >
        {cta.button.text}
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
