---
import BaseLayout from "@layout/BaseLayout.astro";
import { withBase } from "@utils/paths";

const seo = {
  title: "Thanks — Accelyze",
  description: "Thanks for contacting Accelyze. We'll follow up right away.",
};

const homeHref = withBase("/");
---

<BaseLayout seo={seo}>
  <section class="mx-auto flex min-h-[60vh] max-w-[70rem] flex-col items-center justify-center px-4 py-24 text-center sm:px-6 lg:px-8">
    <p class="text-sm font-semibold uppercase tracking-wide text-amber-600 dark:text-amber-400">
      Thank you
    </p>
    <h1 class="mt-3 text-balance text-3xl font-semibold text-slate-900 dark:text-white sm:text-4xl">
      We received your message and will reply swiftly.
    </h1>
    <p class="mt-4 max-w-2xl text-lg text-slate-600 dark:text-slate-300">
      Our team reviews every submission as soon as it lands. Expect a follow-up from us shortly—usually within one business day.
      Need an immediate response? Email
      <a class="font-semibold text-amber-600 underline decoration-amber-200 underline-offset-4 dark:text-amber-400" href="mailto:hello@accelyze.ai">
        hello@accelyze.ai
      </a>
      and we'll jump on it.
    </p>
    <a
      href={homeHref}
      class="mt-8 inline-flex items-center justify-center rounded-xl bg-indigo-600 px-6 py-3 text-base font-semibold text-white shadow-lg shadow-indigo-600/30 transition hover:bg-indigo-500 focus-visible:outline-hidden focus-visible:ring-2 focus-visible:ring-indigo-600 dark:bg-indigo-500 dark:hover:bg-indigo-400"
    >
      Return home
    </a>
  </section>
</BaseLayout>
