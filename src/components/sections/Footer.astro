---
import FooterForm from "@ui/forms/FooterForm.astro";
import ContactInfo from "@common/ContactInfo.astro";
import Logo from "@common/Logo.astro";
import { withBase } from "@utils/paths";

// Props for customization
const companyName = "Accelyze";
const companyDescription =
  "Accelyze is an AI consulting firm built by leaders from Amazon and Google. We design, build, deploy, and operate AI systems into production.";

// Contact information for the company
const contactDetails = {
  address: "Los Angeles/Denver",
  phone: "1 (949) 346-3889",
  email: "hello@accelyze.ai",
  website: "www.accelyze.ai",
};

// Dynamic date for copyright display
const copyrightYear = new Date().getFullYear();

---

<footer class="mt-auto w-full bg-off-white pb-10 dark:bg-slate-950">
  <div class="mx-auto mt-auto w-full max-w-[85rem] px-4 pb-10 sm:px-6 lg:px-8">
    <hr class="mb-10 border-slate-200 dark:border-slate-800" />

    <div class="grid grid-cols-2 gap-6 md:grid-cols-5">
      {/* Company Information */}
      <div class="col-span-full self-center xl:col-span-2">
        <a
          href={withBase("/")}
          class="inline-flex items-center focus-visible:outline-hidden focus-visible:ring-2 focus-visible:ring-amber-400"
          aria-label={`${companyName} homepage`}
        >
          <Logo />
        </a>
        <p class="mt-5 text-pretty text-slate-600 lg:w-5/12 xl:w-10/12 dark:text-slate-300">
          {companyDescription}
        </p>
      </div>

      {/* Contact Information Section */}
      <div class="col-span-1 md:col-span-2 xl:col-span-1 xl:col-start-3">
        <ContactInfo {...contactDetails} />
      </div>

      {/* Email Subscription Form */}
      <div class="col-span-2 md:col-span-3 xl:col-span-2">
        <h3 class="font-semibold text-slate-700 dark:text-slate-200">More information?</h3>
        <FooterForm />
      </div>
    </div>

    {/* Divider before footer's bottom section */}
    <hr class="mb-5 mt-10 border-slate-200 dark:border-slate-800" />

    <div
      class="grid gap-y-2 sm:flex sm:items-center sm:justify-between sm:gap-y-0"
    >
      {/* Copyright */}
      <p class="text-sm text-slate-500 dark:text-slate-400">
        &copy; {copyrightYear}
        {companyName}. All Rights Reserved.
      </p>

      <p class="text-sm text-slate-500 dark:text-slate-400">
        AI that Ships!
      </p>
    </div>
  </div>
</footer>
