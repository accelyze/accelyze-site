---
import Icon from "@ui/icons/Icon.astro";
import { withBase } from "@utils/paths";

const capabilities = [
  {
    title: "Intelligent Automation",
    description:
      "Transform your operations with AI that understands context, learns from feedback, and automates complex workflows to boost productivity.",
    icon: "brain",
    technologies: ["GPT-4", "Claude", "Llama", "Mistral", "Nova", "Qwen"],
  },
  {
    title: "Knowledge & Insight",
    description:
      "Unlock your organization's collective intelligence by making all your data instantly searchable and actionable through natural conversation.",
    icon: "search",
    technologies: ["Pinecone", "Weaviate", "Chroma", "FAISS"],
  },
  {
    title: "Autonomous Operations",
    description:
      "Deploy AI agents that can make decisions, take action, and coordinate complex workflows across teams and systems without constant human oversight.",
    icon: "cog",
    technologies: [
      "LangGraph",
      "CrewAI",
      "AutoGen",
      "AgentCore",
      "Custom Frameworks",
    ],
  },
  {
    title: "Scalable AI Platform",
    description:
      "Build enterprise-grade AI systems that grow with your business, maintain reliability, and deliver consistent performance under real-world conditions.",
    icon: "server",
    technologies: [
      "Kubernetes",
      "AWS SageMaker",
      "AWS Bedrock",
      "MLflow",
      "Kubeflow",
    ],
  },
  {
    title: "Trustworthy AI",
    description:
      "Ensure your AI systems make fair, accurate, and secure decisions while maintaining regulatory compliance and building stakeholder confidence.",
    icon: "shield",
    technologies: [
      "Guardrails",
      "Constitutional AI",
      "Privacy Tech",
      "Audit Frameworks",
    ],
  },
  {
    title: "Seamless Integration",
    description:
      "Connect AI capabilities to your existing tools and workflows to enhance productivity without disrupting your current operations.",
    icon: "arrowPath",
    technologies: ["REST APIs", "GraphQL", "Event Hubs", "RPA Systems"],
  },
];
---

<section class="bg-white py-16 sm:py-24 dark:bg-slate-900">
  <div class="mx-auto max-w-[85rem] px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-4xl text-center">
      <p
        class="text-sm font-semibold tracking-[0.3em] text-indigo-600 uppercase dark:text-indigo-300"
      >
        Business Impact
      </p>
      <h2
        class="mt-4 text-3xl font-semibold text-slate-900 sm:text-4xl dark:text-white"
      >
        AI Solutions That Drive Real Results
      </h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-slate-300">
        We combine cutting-edge AI technology with deep business understanding
        to deliver solutions that <strong
          >transform operations, delight customers, and create sustainable
          competitive advantages</strong
        >.
      </p>
    </div>

    <div class="mt-12 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {
        capabilities.map((capability) => (
          <div class="flex flex-col rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition-shadow duration-200 hover:shadow-md dark:border-slate-800 dark:bg-slate-900">
            <div class="flex items-center gap-3">
              <div class="flex size-10 items-center justify-center rounded-xl bg-indigo-600/10 text-indigo-600 dark:bg-indigo-500/10 dark:text-indigo-300">
                <Icon name={capability.icon} class="size-5" />
              </div>
              <h3 class="text-lg font-semibold text-slate-900 dark:text-white">
                {capability.title}
              </h3>
            </div>
            <p class="mt-3 text-sm text-slate-600 dark:text-slate-300">
              {capability.description}
            </p>
            <div class="mt-4 flex flex-wrap gap-2">
              {capability.technologies.map((tech) => (
                <span class="inline-flex items-center rounded-full bg-slate-100 px-2.5 py-0.5 text-xs font-medium text-slate-700 dark:bg-slate-800 dark:text-slate-300">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        ))
      }
    </div>

    <div class="mt-10 text-center">
      <a
        href={withBase("/services")}
        class="inline-flex items-center text-base font-semibold text-indigo-700 transition hover:text-indigo-500 dark:text-indigo-300"
      >
        Explore our technical services
        <svg
          class="ms-2 size-4"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <path d="M5 12h14"></path>
          <path d="m12 5 7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
