---
import Button from "@ui/Button.astro";
import { withBase } from "@utils/paths";
import Icon from "@ui/icons/Icon.astro";

const supportPillars = [
  {
    title: "From demo to production",
    description:
      "We specialize in the messy middle: integration, MLOps, and change management that makes AI real, not just a lab experiment.",
  },
  {
    title: "Leaders from Amazon and Google",
    description:
      "Our team has led large-scale AI deployments at global cloud and product companies. We bring those best practices to your stack.",
  },
  {
    title: "Business value first",
    description:
      "Every engagement starts from a value hypothesis and a clear success metric. We only take projects that we believe can ship and create measurable impact.",
  },
];

const primaryCTA = {
  text: "Schedule a discovery call",
  href: withBase("/contact"),
};

const secondaryCTA = {
  text: "Explore our services",
  href: withBase("/services"),
};
---

<section class="bg-linear-to-br/oklch from-indigo-50 via-white to-transparent dark:from-slate-900/50 dark:via-slate-900 dark:to-slate-950">
  <div class="mx-auto max-w-340 px-4 pb-20 pt-48 sm:px-6 lg:px-8">
    <div class="grid gap-12 lg:grid-cols-[minmax(0,0.9fr)_minmax(0,1fr)] lg:items-center">
      <div>
        <p class="text-sm font-semibold uppercase tracking-[0.3em] text-indigo-600 dark:text-indigo-300">
          Enterprise AI Delivery
        </p>
        <h1 class="mt-6 text-balance text-4xl font-semibold text-slate-900 sm:text-5xl md:text-6xl lg:text-7xl dark:text-white">
          AI that Ships
        </h1>
        <p class="mt-6 text-lg leading-relaxed text-slate-600 dark:text-slate-300">
          Accelyze helps enterprises turn AI prototypes into production systems. We design, build, and operate AI solutions that are secure, compliant, and tied to real business value from day one.
        </p>
        <div class="mt-10 flex flex-col gap-4 sm:flex-row sm:items-center">
          <Button href={primaryCTA.href} className="text-base">
            {primaryCTA.text}
          </Button>
          <a
            href={secondaryCTA.href}
            class="inline-flex items-center text-base font-semibold text-indigo-700 transition hover:text-indigo-500 dark:text-indigo-300"
          >
            {secondaryCTA.text}
            <svg
              class="ms-2 size-5"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M5 12h14" />
              <path d="m12 5 7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>

      <div class="rounded-3xl border border-slate-200 bg-white/80 p-8 shadow-xl shadow-indigo-100 dark:border-slate-800 dark:bg-slate-900/70 dark:shadow-none">
        <div class="flex flex-col gap-8">
          {supportPillars.map((pillar) => (
            <div class="flex gap-4">
              <div class="flex size-12 items-center justify-center rounded-2xl bg-indigo-600/10 text-indigo-600 dark:bg-indigo-500/10 dark:text-indigo-300">
                <Icon name="lightbulb" class="size-6" />
              </div>
              <div>
                <h3 class="text-lg font-semibold text-slate-900 dark:text-white">
                  {pillar.title}
                </h3>
                <p class="mt-2 text-sm leading-relaxed text-slate-600 dark:text-slate-300">
                  {pillar.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
