---
import Button from "@ui/Button.astro";
import { withBase } from "@utils/paths";
import Icon from "@ui/icons/Icon.astro";

const supportPillars = [
  {
    title: "Faster Time to Value",
    description:
      "Go from AI concept to business impact in weeks, not months. Our proven delivery approach ensures you see measurable results quickly.",
  },
  {
    title: "Proven Enterprise Expertise",
    description:
      "Led by veterans from Amazon and Google who have deployed AI at scale. We bring Fortune 500 experience to your toughest challenges.",
  },
  {
    title: "Measurable Business Outcomes",
    description:
      "We focus on what matters to your bottom line: increased efficiency, reduced costs, and new revenue streams from AI-powered capabilities.",
  },
];

const primaryCTA = {
  text: "Schedule a discovery call",
  href: withBase("/contact"),
};

const secondaryCTA = {
  text: "Explore our services",
  href: withBase("/services"),
};
---

<section
  class="bg-linear-to-br/oklch from-indigo-50 via-white to-transparent dark:from-slate-900/50 dark:via-slate-900 dark:to-slate-950"
>
  <div class="mx-auto max-w-340 px-4 pt-48 pb-20 sm:px-6 lg:px-8">
    <div
      class="grid gap-12 lg:grid-cols-[minmax(0,0.9fr)_minmax(0,1fr)] lg:items-center"
    >
      <div>
        <p
          class="text-sm font-semibold tracking-[0.3em] text-indigo-600 uppercase dark:text-indigo-300"
        >
          Generative AI & Agentic Solutions
        </p>
        <h1
          class="mt-6 text-4xl font-semibold text-balance text-slate-900 sm:text-5xl md:text-6xl lg:text-7xl dark:text-white"
        >
          AI that Ships
        </h1>
        <p
          class="mt-6 text-lg leading-relaxed text-slate-600 dark:text-slate-300"
        >
          Transform your business with AI that delivers measurable results. We
          help enterprises move from AI experiments to production systems that <strong
            >reduce costs, accelerate growth, and create competitive advantages</strong
          >, all while maintaining security and compliance.
        </p>
        <div class="mt-10 flex flex-col gap-4 sm:flex-row sm:items-center">
          <Button href={primaryCTA.href} className="text-base">
            {primaryCTA.text}
          </Button>
          <a
            href={secondaryCTA.href}
            class="inline-flex items-center text-base font-semibold text-indigo-700 transition hover:text-indigo-500 dark:text-indigo-300"
          >
            {secondaryCTA.text}
            <svg
              class="ms-2 size-5"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M5 12h14"></path>
              <path d="m12 5 7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>

      <div
        class="rounded-3xl border border-slate-200 bg-white/80 p-8 shadow-xl shadow-indigo-100 dark:border-slate-800 dark:bg-slate-900/70 dark:shadow-none"
      >
        <div class="flex flex-col gap-8">
          {
            supportPillars.map((pillar) => (
              <div class="flex gap-4">
                <div class="flex size-12 items-center justify-center rounded-2xl bg-indigo-600/10 text-indigo-600 dark:bg-indigo-500/10 dark:text-indigo-300">
                  <Icon name="lightbulb" class="size-6" />
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-slate-900 dark:text-white">
                    {pillar.title}
                  </h3>
                  <p class="mt-2 text-sm leading-relaxed text-slate-600 dark:text-slate-300">
                    {pillar.description}
                  </p>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</section>
